<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintLeft_toLeftOf="@id/iv_circle"
        app:layout_constraintRight_toRightOf="@id/iv_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_circle"
        android:id="@+id/lineOn"
        android:background="@color/theme_black"
        android:layout_width="3dp"
        android:layout_height="25dp"/>
    <TextView
        app:layout_constraintLeft_toLeftOf="@id/lineOn"
        app:layout_constraintRight_toRightOf="@id/lineOn"
        app:layout_constraintTop_toBottomOf="@id/iv_circle"
        android:id="@+id/lineUnder"
        android:background="@color/theme_black"
        android:layout_width="3dp"
        android:layout_height="25dp"/>
    <TextView
        android:id="@+id/tv_myInfo"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/iv_circle"
        app:layout_constraintBottom_toBottomOf="@id/iv_circle"
        app:layout_constraintTop_toTopOf="@id/iv_circle"
        android:textSize="13sp"
        android:textColor="@color/theme_black"
        android:text="2022-03-10 레벨업\nLv : 10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineOn"
        android:id="@+id/iv_circle"
        android:src="@drawable/ic_baseline_flag_circle_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>