<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/tv"
        android:textColor="@color/black"
        android:lineSpacingExtra="2dp"
        android:gravity="center"
        android:text="단어에 대한 설명을 메모하는 메모장 입니다\n자유롭게 활용해주세요"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_title"
        android:background="@color/white"
        android:textColor="@color/black"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv"
        android:text="  예시 ex) Run  "
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/info"
        android:textColor="@color/black"
        android:lineSpacingExtra="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        android:paddingBottom="15dp"
        android:text="현재 run \n과거 ran \n과거분사 run \n현재분사 running \n문장--\nThe college runs summer courses for foreign students."
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/info"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black"
        android:text="다시 보지 않음"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>