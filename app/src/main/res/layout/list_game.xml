<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/theme_black"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/dot"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/theme_black"
                android:layout_width="5dp"
                android:layout_height="5dp"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_marginLeft="5dp"
                app:layout_constraintTop_toTopOf="@id/dot"
                app:layout_constraintBottom_toBottomOf="@id/dot"
                app:layout_constraintLeft_toRightOf="@id/dot"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/theme_black"
                android:text="행맨 게임"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="13dp"
                android:id="@+id/tv_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="행맨 게임 입니다\n컴퓨터가 고른 단어를 맞춰보세요."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@id/tv_title"
                app:layout_constraintRight_toLeftOf="@id/mv"
                app:layout_constraintTop_toBottomOf="@id/tv_title"/>

            <ImageView
                android:id="@+id/mv"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_launcher_round"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_info"
                app:layout_constraintTop_toTopOf="@id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>