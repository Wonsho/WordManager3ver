<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_theme">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/ic_baseline_event_note_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="( "
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/iv"
                app:layout_constraintLeft_toRightOf="@id/iv"
                app:layout_constraintTop_toTopOf="@id/iv" />

            <TextView
                android:id="@+id/tv_wordCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/tv1"
                app:layout_constraintLeft_toRightOf="@id/tv1"
                app:layout_constraintTop_toTopOf="@id/tv1" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" )"
                android:textSize="10sp"
                app:layout_constraintLeft_toRightOf="@id/tv_wordCount"
                app:layout_constraintTop_toTopOf="@id/tv_wordCount" />

            <TextView
                android:id="@+id/tv_listTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="아무렇게 쓴 단어장"
                android:textColor="@color/theme_black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/iv"
                app:layout_constraintLeft_toRightOf="@id/tv2"
                app:layout_constraintRight_toLeftOf="@id/tv3"
                app:layout_constraintTop_toTopOf="@id/iv" />

            <TextView
                android:id="@+id/tv_listGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="A+"
                android:textColor="@color/theme_black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/iv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv" />

            <TextView
                app:layout_constraintRight_toRightOf="@id/tv_listTitle"
                app:layout_constraintBottom_toBottomOf="@id/tv_listTitle"
                app:layout_constraintTop_toTopOf="@id/tv_listTitle"
                android:textSize="10sp"
                android:text="단어장을 눌러 단어를\n 추가해주세요"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="단어장 점수 : "
                android:textColor="@color/theme_black"
                app:layout_constraintBottom_toBottomOf="@id/iv"
                app:layout_constraintRight_toLeftOf="@id/tv_listGrade"
                app:layout_constraintTop_toTopOf="@id/iv" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>