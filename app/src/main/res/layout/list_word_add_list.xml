<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



            <TextView
                android:textStyle="bold"
                android:text="삭제 "
                android:id="@+id/btn_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:text="메모하기"
                android:id="@+id/btn_memo"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginRight="10dp"
                android:paddingRight="5dp"
                app:layout_constraintBottom_toBottomOf="@id/btn_delete"
                app:layout_constraintTop_toTopOf="@id/btn_delete"
                app:layout_constraintRight_toLeftOf="@id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_wordTitle"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_delete"
                android:textColor="@color/theme_black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Apple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_language"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tv_wordTitle"
                app:layout_constraintBottom_toTopOf="@id/tv_wordTitle"
                android:text="English"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_wordKorean"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="@id/tv_wordTitle"
                app:layout_constraintTop_toBottomOf="@id/tv_wordTitle"
                android:textColor="@color/theme_black"
                android:text="사과\n형용사는 뭐고 명사는 사과 맞는데 뭐라 할지 모르겠네"
                android:layout_width="0dp"
                android:layout_marginRight="20dp"
                app:layout_constraintRight_toLeftOf="@id/tv"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                app:layout_constraintRight_toLeftOf="@id/tv_percentage"
                app:layout_constraintBottom_toBottomOf="@id/tv_percentage"
                app:layout_constraintTop_toTopOf="@id/tv_percentage"
                android:id="@+id/tv"
                android:textColor="@color/theme_black"
                android:text="정답률 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:text="수정하기"
                android:id="@+id/btn_rename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="@id/btn_memo"
                app:layout_constraintRight_toLeftOf="@id/btn_memo"
                app:layout_constraintTop_toTopOf="@id/btn_memo" />


            <TextView
                android:textSize="15sp"
                android:layout_marginRight="15dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_wordKorean"
                app:layout_constraintRight_toRightOf="@id/btn_delete"
                android:id="@+id/tv_percentage"
                android:textColor="@color/theme_black"
                android:text= "0%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>