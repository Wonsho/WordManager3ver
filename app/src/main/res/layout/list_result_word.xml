<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:id="@+id/tv_new_word_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Apple Apple Apple Apple Apple"
        android:textColor="@color/theme_black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정답률 : "
        android:textColor="@color/theme_black"
        app:layout_constraintBottom_toBottomOf="@id/tv_correct_percentage"
        app:layout_constraintRight_toLeftOf="@id/tv_correct_percentage"
        app:layout_constraintTop_toTopOf="@id/tv_correct_percentage" />


    <TextView
        android:id="@+id/tv_correct_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50%"
        android:layout_marginRight="5dp"
        android:textColor="@color/theme_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@id/t1"
        app:layout_constraintTop_toTopOf="@id/t1"
        app:layout_constraintRight_toLeftOf="@id/t1"
        android:src="@drawable/ic_baseline_check_circle_outline_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>