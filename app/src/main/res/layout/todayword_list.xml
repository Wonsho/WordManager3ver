<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/tv_wordTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:text="Apple"
        android:textColor="@color/theme_black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_wordKorean"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:text="사과\n형용사는 뭐고 명사는 사과 맞는데 뭐라 할지 모르겠네"
        android:textColor="@color/theme_black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_wordTitle"
        app:layout_constraintRight_toLeftOf="@id/tv"
        app:layout_constraintTop_toBottomOf="@id/tv_wordTitle" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="정답률 : "
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_percentage"
        app:layout_constraintRight_toLeftOf="@id/tv_percentage"
        app:layout_constraintTop_toTopOf="@id/tv_percentage" />

    <TextView
        android:id="@+id/tv_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="0%"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_wordKorean"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_result"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/tv"
        app:layout_constraintBottom_toTopOf="@id/tv"
        app:layout_constraintTop_toBottomOf="@id/tv_wordTitle"
        android:text="합격"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>